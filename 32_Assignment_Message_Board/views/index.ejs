<!doctype html>
<html>
<head>
	<title>Coding Dojo Message Board</title>
	<!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

	<!-- Optional theme -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r" crossorigin="anonymous">

	<!-- Latest compiled and minified JavaScript -->
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>


</head>
<body>
	<h1>The Dojo Message Board</h1>

	<!-- Error message (if any) appears here -->



	<!-- Create message here -->
	<form action="/create_message" method="post" role="form" class="col-md-3">

	  <div class="form-group">
	    <label for="name">Name:</label>
	    <input type="text" class="form-control" id="text" name="name">
	  </div>
	  
	  <textarea name="message" rows="4" cols="50"></textarea>
	  <button type="submit" class="btn btn-default">Post Message</button>
	</form>


	<!-- Message created here -->
	<!-- Adding comments to this message -->
	<% for(var x in all_messages) { %>

	<form action="/posts/<%= all_messages[x].id %>" method="post" role="form" class="col-md-3">
	
	<h4>Name:<%= all_messages[x].name %></h4><!-- name of person who created message -->
	<h4>Message:<%= all_messages[x].message %></h4><!-- created message here -->

	<!-- Display any comments that were made to this message -->
	<h6>Commenter:<%= all_messages[x].name %></h4></h6><!-- Commenter name -->
	<h6>Comment:<%= all_messages[x].comment%></h6><!-- Comment -->

	
	
	


	


	  <div class="form-group">
	    <label for="name">Name:</label>
	    <input type="text" class="form-control" id="text" name="name">
	  </div>
	  
	  <textarea name="comment" rows="4" cols="50"></textarea>
	  <button type="submit" class="btn btn-success">Create Comment</button>
	</form>
	<% } %>


</body>
</html>








