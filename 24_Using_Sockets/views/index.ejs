<title></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

    <!-- Requiring this file sets everything up for us -->
    <script type ="text/javascript" src="/socket.io/socket.io.js"></script>


    <script type ="text/javascript">
        $(document).ready(function (){
            // this triggers the connection event in our server!
            var socket = io.connect();
            // we'll write all the socket stuff after the above line!

            // SOCKET STUFF!
            $('button').click(function(){
            	// emitting an event
            	// passing a string first (this will be the name of event emitted!) must also be same on server side!
            	// the second parameter passed is the JSON object
            	socket.emit("batman_button_clicked", {reason: "because I want to learn about sockets"});
            });
            socket.on('server_response', function(data){
            	console.log("The server says: " + data.response);
            })



        });
    </script>
